<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.finalproject.MovieDetails">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pictureView"
        android:minHeight="25dp"
        android:minWidth="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titleTextView"
        android:id="@+id/titleText"
        android:layout_gravity="left|top"
        android:minWidth="50dp"
        android:layout_below="@+id/pictureView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionTextView"
        android:id="@+id/descriptionText"
        android:layout_marginTop="21dp"
        android:minWidth="25dp"
        android:layout_below="@+id/titleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieRating"
        android:layout_marginTop="48dp"
        android:numStars="5"
        android:onClick="setListFooter"
        android:mirrorForRtl="true"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:layout_toEndOf="@+id/pictureView"
        android:layout_below="@+id/descriptionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playBtn"
        android:layout_marginTop="38dp"
        android:text="@string/playBtn"
        android:layout_toEndOf="@+id/pictureView"
        android:layout_below="@+id/movieRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editBtn"
        android:id="@+id/editBtn"
        android:layout_toEndOf="@+id/pictureView"
        android:layout_below="@+id/playBtn"
        android:layout_alignLeft="@+id/playBtn"
        android:layout_alignStart="@+id/playBtn"
        android:layout_marginTop="26dp" />

</RelativeLayout>
